{
  "name": "@japa/runner",
  "version": "2.5.1",
  "description": "Runner for Japa testing framework",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./reporters": "./build/src/reporters/main.js",
    "./core": "./build/modules/core/main.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=japa:runner c8 npm run quick:test",
    "quick:test": "glob -c \"node --enable-source-maps --loader=ts-node/esm --test\" \"tests/*.spec.ts\"",
    "clean": "del build",
    "typecheck": "tsc --noEmit",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels .github/labels.json japa/runner"
  },
  "keywords": [
    "japa",
    "tests",
    "test-runner"
  ],
  "author": "virk,japa",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.5",
    "@adonisjs/prettier-config": "^1.1.5",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/tsconfig": "^1.1.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@swc/core": "^1.3.66",
    "@types/chai": "^4.3.5",
    "@types/chai-subset": "^1.3.3",
    "@types/ms": "^0.7.31",
    "@types/node": "^20.3.1",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "chai-subset": "^1.6.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.36.0",
    "github-label-sync": "^2.3.1",
    "glob": "^10.3.0",
    "husky": "^8.0.3",
    "japa": "^4.0.0",
    "np": "^8.0.4",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@japa/core": "^8.0.0-4",
    "@japa/errors-printer": "^3.0.0-2",
    "@poppinss/cliui": "^6.1.1-2",
    "@poppinss/hooks": "^7.1.1-3",
    "fast-glob": "^3.2.12",
    "getopts": "^2.3.0",
    "ms": "^2.1.3"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/japa/runner.git"
  },
  "bugs": {
    "url": "https://github.com/japa/runner/issues"
  },
  "homepage": "https://github.com/japa/runner#readme",
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**",
      "modules/core/**",
      "src/reporters/**"
    ]
  }
}
